# build instructions for final GCC 4.2.1

include packages/buildroot/bootstrap/autotools.mk

conf-args += \
	--with-local-prefix=$(prefix) \
	--disable-multilib \
	--disable-shared \
	--disable-threads \
	--disable-nls \
	--enable-languages=c

build-args += \
	all-gcc

install-targets += \
	install-gcc

package-post-install:
	ln -sf gcc $(ROOTFS)$(prefix)/bin/cc
	$(ROOTFS)$(prefix)/bin/gcc -dumpspecs | \
		sed -r 's@/lib(64)?/ld@$(prefix)/lib/ld@g' \
		> $(dir $(shell $(ROOTFS)$(prefix)/bin/gcc -print-libgcc-file-name))specs

