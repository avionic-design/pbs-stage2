# build instructions for final GCC 4.2.1

#env = env -i PATH=$(ROOTFS)/bootstrap/bin:/usr/bin:/bin

ifneq ($(HOST), $(TARGET))
  conf-args += \
	--target=$(TARGET)
endif

conf-args += \
	--with-local-prefix=$(dest-prefix) \
	--program-prefix=$(TARGET)- \
	--disable-multilib \
	--disable-nls \
	--enable-shared \
	--enable-languages=c,c++

package-post-install:
	ln -sf $(TARGET)-gcc $(dest-prefix)/bin/$(TARGET)-cc
	$(dest-prefix)/bin/$(TARGET)-gcc -dumpspecs | \
		sed -r 's@/lib(64)?/ld@$(devel-prefix)/lib/ld@g' \
		> $(dir $(shell $(dest-prefix)/bin/$(TARGET)-gcc -print-libgcc-file-name))specs

