	--with-local-prefix=$(prefix) \
	--with-build-time-tools=$(ROOTFS)$(prefix)/bin \
	--with-dynamic-linker=$(prefix)/lib/ld-linux.so.2 \
	--without-headers \
	--with-newlib \
	--disable-multilib \
	--enable-threads=posix \
	--disable-nls \
	--disable-shared \
	--enable-symvers=gnu \
	--enable-languages=c,c++

