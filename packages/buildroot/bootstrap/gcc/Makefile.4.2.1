# build instructions for final GCC 4.2.1

include packages/buildroot/autotools.mk

conf-args += \
	--with-local-prefix=$(prefix) \
	--with-build-time-tools=$(ROOTFS)$(prefix)/bin \
	--without-headers \
	--with-newlib \
	--disable-multilib \
	--enable-threads=posix \
	--disable-nls \
	--enable-shared \
	--enable-symvers=gnu \
	--enable-languages=c,c++

# for sysroot build
