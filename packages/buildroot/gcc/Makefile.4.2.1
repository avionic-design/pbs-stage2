include packages/buildroot/autotools.mk

conf-args += \
	--with-sysroot=$(ROOTFS) \
	--with-local-prefix=$(prefix) \
	--with-build-time-tools=$(ROOTFS)$(prefix)/bin \
	--without-headers \
	--with-newlib \
	--disable-multilib \
	--enable-threads=posix \
	--disable-nls \
	--enable-symvers=gnu \
	--enable-languages=c,c++

