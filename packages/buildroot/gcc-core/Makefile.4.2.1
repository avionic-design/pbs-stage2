# build instructions for bootstrap GCC 4.2.1

conf-args := \
	--prefix=$(ROOTFS)/bootstrap \
	--with-local-prefix=$(ROOTFS)/bootstrap \
	--with-build-time-tools=$(ROOTFS)$(prefix)/bin \
	--disable-multilib \
	--disable-threads \
	--disable-nls \
	--enable-symvers=gnu \
	--disable-shared \
	--enable-languages=c

# from LFS
#conf-args := \
	--prefix=$(ROOTFS)/bootstrap \
	--with-local-prefix=$(ROOTFS)/bootstrap \
	--disable-nls \
	--enable-shared \
	--enable-languages=c

conf-vars :=

package-configure:
	mkdir -p $(pkgtree)/core-$(HOST) && cd $(pkgtree)/core-$(HOST) && \
		$(env) ../configure $(conf-args) $(conf-vars)

build-args :=
build-vars :=

package-build:
	cd $(pkgtree)/core-$(HOST) && \
		$(env) $(MAKE) $(build-args) $(build-vars) bootstrap # from LFS
#		$(env) $(MAKE) $(build-args) $(build-vars) all-gcc

install-args :=
install-vars :=

package-install:
	cd $(pkgtree)/core-$(HOST) && \
		$(env) $(MAKE) $(install-args) $(install-vars) install # from LFS
#		$(env) $(MAKE) $(install-args) $(install-vars) install-gcc

