# build instructions for bootstrapping GCC 4.2.2

ifneq ($(HOST), $(TARGET))
  conf-args += \
	--target=$(TARGET)
endif

conf-args += \
	--with-local-prefix=$(dest-prefix) \
	--program-prefix=$(TARGET)- \
	--disable-multilib \
	--disable-shared \
	--disable-threads \
	--disable-nls \
	--enable-languages=c

build-args += \
	all-gcc

install-targets += \
	install-gcc

package-post-install:
	ln -sf $(TARGET)-gcc $(ROOTFS)$(prefix)/bin/$(TARGET)-cc

