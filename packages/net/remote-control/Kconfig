config PACKAGE_NET_REMOTE_CONTROL
	bool "remote-control"
	select PACKAGE_BUILD_TOOLS_LIBRPC
	select PACKAGE_BUILD_TOOLS_LIBTOOL
	select PACKAGE_LIBS_GTKOSK
	select PACKAGE_LIBS_LIBGLADE
	select PACKAGE_LIBS_LIBRPC
	select PACKAGE_LIBS_LIBSH
	select PACKAGE_LIBS_LIBSMARTCARD if PACKAGE_NET_REMOTE_CONTROL_SMARTCARD_LIBSMARTCARD
	select PACKAGE_LIBS_LIBCCID if PACKAGE_NET_REMOTE_CONTROL_SMARTCARD_LIBCCID
	select PACKAGE_LIBS_LIBMODEM if PACKAGE_NET_REMOTE_CONTROL_MODEM_LIBMODEM
	select PACKAGE_MULTIMEDIA_LINPHONE if PACKAGE_NET_REMOTE_CONTROL_VOIP_LINPHONE
	select PACKAGE_MULTIMEDIA_VLC if PACKAGE_NET_REMOTE_CONTROL_VIDEO_VLC
	select PACKAGE_MULTIMEDIA_GSTREAMER_PLUGINS_BASE if PACKAGE_NET_REMOTE_CONTROL_VIDEO_GST
	select PACKAGE_WEB_WEBKIT_GTK
	default n

choice
	prompt "Backlight Support"
	depends on PACKAGE_NET_REMOTE_CONTROL

	config PACKAGE_NET_REMOTE_CONTROL_BACKLIGHT_NONE
		bool "Not supported"

	config PACKAGE_NET_REMOTE_CONTROL_BACKLIGHT_DPMS
		bool "DPMS"

	config PACKAGE_NET_REMOTE_CONTROL_BACKLIGHT_MEDATOM
		bool "Avionic Design Medatom"

endchoice

choice
	prompt "Video Playback Support"
	depends on PACKAGE_NET_REMOTE_CONTROL

	config PACKAGE_NET_REMOTE_CONTROL_VIDEO_NONE
		bool "Not supported"

	config PACKAGE_NET_REMOTE_CONTROL_VIDEO_VLC
		bool "Use VideoLanClient"

	config PACKAGE_NET_REMOTE_CONTROL_VIDEO_GST
		bool "Use GStreamer"

endchoice

choice
	prompt "SmartCard/RFID Support"
	depends on PACKAGE_NET_REMOTE_CONTROL

	config PACKAGE_NET_REMOTE_CONTROL_SMARTCARD_NONE
		bool "Not supported"

	config PACKAGE_NET_REMOTE_CONTROL_SMARTCARD_LIBSMARTCARD
		bool "Use libsmartcard"

	config PACKAGE_NET_REMOTE_CONTROL_SMARTCARD_LIBCCID
		bool "Use libccid"
endchoice

choice
	prompt "VoIP Support"
	depends on PACKAGE_NET_REMOTE_CONTROL

	config PACKAGE_NET_REMOTE_CONTROL_VOIP_NONE
		bool "Not supported"

	config PACKAGE_NET_REMOTE_CONTROL_VOIP_LINPHONE
		bool "Use Linphone"

endchoice

choice
	prompt "Modem Support"
	depends on PACKAGE_NET_REMOTE_CONTROL

	config PACKAGE_NET_REMOTE_CONTROL_MODEM_NONE
		bool "Not supported"

	config PACKAGE_NET_REMOTE_CONTROL_MODEM_LIBMODEM
		bool "Use libmodem"

endchoice
