config PACKAGE_XORG_XORG_SERVER
	bool "xorg-server"
	select PACKAGE_LIBS_LIBDRM if XORG_DRI
	select PACKAGE_LIBS_MESA if XORG_DRI
	select PACKAGE_LIBS_OPENSSL
	select PACKAGE_LIBS_PIXMAN
	select PACKAGE_XORG_LIB_FONTENC
	select PACKAGE_XORG_LIB_PCIACCESS
	select PACKAGE_XORG_LIB_XDMCP
	select PACKAGE_XORG_LIB_XFONT
	select PACKAGE_XORG_LIB_XKBFILE
	select PACKAGE_XORG_PROTO_BIGREQS
	select PACKAGE_XORG_PROTO_COMPOSITE
	select PACKAGE_XORG_PROTO_DAMAGE
	select PACKAGE_XORG_PROTO_DGA
	select PACKAGE_XORG_PROTO_DRI if XORG_DRI
	select PACKAGE_XORG_PROTO_DRI2 if XORG_DRI
	select PACKAGE_XORG_PROTO_FIXES
	select PACKAGE_XORG_PROTO_FONTS
	select PACKAGE_XORG_PROTO_GL
	select PACKAGE_XORG_PROTO_PRINT if XORG_PRINT
	select PACKAGE_XORG_PROTO_RANDR
	select PACKAGE_XORG_PROTO_RECORD
	select PACKAGE_XORG_PROTO_RENDER
	select PACKAGE_XORG_PROTO_RESOURCE
	select PACKAGE_XORG_PROTO_SCRNSAVER
	select PACKAGE_XORG_PROTO_VIDEO if XORG_XV
	select PACKAGE_XORG_PROTO_XCMISC
	select PACKAGE_XORG_PROTO_XINERAMA if XORG_XINERAMA
	select VIRTUAL_UDEV

if PACKAGE_XORG_XORG_SERVER

config XORG_AIGLX
	bool "AIGLX support"

config XORG_DRI
	bool "DRI support"

config XORG_GLX
	bool "GLX support"

config XORG_XV
	bool "XVideo support"

config XORG_XINERAMA
	bool "Xinerama support"

config XORG_PRINT
	bool "Printing support"

endif
