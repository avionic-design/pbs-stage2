config PACKAGE_XORG_DRIVER_VIDEO_INTEL
	bool "intel"
	select PACKAGE_XORG_LIB_XVMC
	select PACKAGE_XORG_PROTO_XINERAMA
	select PACKAGE_XORG_XORG_SERVER

if PACKAGE_XORG_DRIVER_VIDEO_INTEL

choice
	prompt "acceleration backend"

config PACKAGE_XORG_DRIVER_VIDEO_INTEL_SNA
	bool "SNA"

config PACKAGE_XORG_DRIVER_VIDEO_INTEL_UXA
	bool "UXA"

endchoice

config PACKAGE_XORG_DRIVER_VIDEO_INTEL_DEBUG
	bool "enable debugging support"

if PACKAGE_XORG_DRIVER_VIDEO_INTEL_DEBUG

config PACKAGE_XORG_DRIVER_VIDEO_INTEL_DEBUG_VALGRIND
	bool "enable valgrind support"
	select PACKAGE_DEVEL_VALGRIND
	depends on (ARCH_X86 || ARCH_X86_64 || ARCH_POWERPC || ARCH_MIPS || ARCH_ARM_ARCH_V7)

endif

endif
