config PACKAGE_CORE_UTIL_LINUX
	bool "util-linux-ng"
	select PACKAGE_BUILD_TOOLS_GETTEXT
	select PACKAGE_LIBS_NCURSES if PACKAGE_CORE_UTIL_LINUX_NCURSES
	select PACKAGE_LIBS_PAM if PACKAGE_CORE_UTIL_LINUX_PAM

if PACKAGE_CORE_UTIL_LINUX

config PACKAGE_CORE_UTIL_LINUX_NCURSES
	bool "ncurses support"
	default y

config PACKAGE_CORE_UTIL_LINUX_PAM
	bool "PAM support"

endif
