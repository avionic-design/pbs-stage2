config PACKAGE_CORE_UDEV
	bool "udev"
	select VIRTUAL_DEVEL_LIBC if !PACKAGE_CORE_UDEV_GLIB
	select PACKAGE_LIBS_GLIB if PACKAGE_CORE_UDEV_GLIB
	select PACKAGE_LIBS_LIBUSB if !PACKAGE_CORE_UDEV_DISABLE_EXTRAS
	default n

config PACKAGE_CORE_UDEV_GLIB
	bool "GLib binding"
	depends on PACKAGE_CORE_UDEV
	default n

config PACKAGE_CORE_UDEV_DISABLE_EXTRAS
	bool "disable extras"
	depends on PACKAGE_CORE_UDEV
	default n
