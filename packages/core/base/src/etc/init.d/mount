#!/bin/sh

/bin/mount -t proc  -o nodev,noexec,nosuid proc  /proc
/bin/mount -t sysfs -o nodev,noexec,nosuid sysfs /sys

# mount devpts filesystem
if [ -f /etc/default/devpts ]; then
	. /etc/default/devpts
else
	TTYGROUP=5
	TTYMODE=620
fi

if [ ! -d /dev/pts ]; then
	mkdir -p /dev/pts
fi

/bin/mount -t devpts -o noexec,nosuid,gid=$TTYGROUP,mode=$TTYMODE devpts /dev/pts

