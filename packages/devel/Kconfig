menu "Development Tools"

config PACKAGE_DEVEL_LIBC
	bool
	default n

choice
	prompt "C runtime library"

config PACKAGE_DEVEL_UCLIBC
	bool "uclibc: uClibc"
	select PACKAGE_DEVEL_LIBC
	depends on PACKAGE_KERNEL_LINUX_LIBC

config PACKAGE_DEVEL_GLIBC
	bool "glibc: GNU libc"
	select PACKAGE_DEVEL_LIBC
	depends on PACKAGE_KERNEL_LINUX_LIBC

config PACKAGE_DEVEL_KLIBC
	bool "klibc"
	select PACKAGE_DEVEL_LIBC
	depends on PACKAGE_KERNEL_LINUX_LIBC

endchoice

config PACKAGE_DEVEL_GDB_SERVER
	bool "gdb-server: GNU debugger server"
	depends on PACKAGE_DEVEL_LIBC
	default n

config PACKAGE_DEVEL_STRACE
	bool "strace"
	depends on PACKAGE_DEVEL_LIBC
	default n

endmenu

