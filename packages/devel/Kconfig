menu "Development Tools"

config VIRTUAL_DEVEL_LIBC
	bool
	default n
	select VIRTUAL_KERNEL_LINUX_LIBC

#
# C runtime library
#
choice
	prompt "C runtime library"

config PACKAGE_DEVEL_UCLIBC
	bool "uclibc: uClibc"
	select VIRTUAL_DEVEL_LIBC
	select VIRTUAL_PROVIDES

config PACKAGE_DEVEL_GLIBC
	bool "glibc: GNU libc"
	select VIRTUAL_DEVEL_LIBC
	select VIRTUAL_PROVIDES

config PACKAGE_DEVEL_KLIBC
	bool "klibc"
	select VIRTUAL_DEVEL_LIBC
	select VIRTUAL_PROVIDES

endchoice

source "packages/devel/uclibc/Kconfig"
source "packages/devel/glibc/Kconfig"
source "packages/devel/klibc/Kconfig"

config PACKAGE_DEVEL_GDB
	bool "gdb: GNU debugger"
	select PACKAGE_DEVEL_LIBC
	default n

config PACKAGE_DEVEL_STRACE
	bool "strace"
	select PACKAGE_DEVEL_LIBC
	default n

endmenu
