config PACKAGE_UTIL_MTD_UTILS
	bool "mtd-utils"
	select PACKAGE_CORE_UTIL_LINUX if !PACKAGE_UTIL_MTD_UTILS_WITHOUT_UBI
	select PACKAGE_LIBS_LZO if !PACKAGE_UTIL_MTD_UTILS_WITHOUT_LZO
	select PACKAGE_LIBS_ZLIB

if PACKAGE_UTIL_MTD_UTILS

config PACKAGE_UTIL_MTD_UTILS_WITHOUT_LZO
	bool "mtd-utils without LZO support"

config PACKAGE_UTIL_MTD_UTILS_WITHOUT_UBI
	bool "mtd-utils without UBI support"

endif
