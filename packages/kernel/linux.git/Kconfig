config OS
	string
	default "linux"

config VIRTUAL_KERNEL_LINUX_LIBC
	bool
	select PACKAGE_KERNEL_LINUX_KERNEL
	default n

config PACKAGE_KERNEL_LINUX_KERNEL
	bool "linux: Linux kernel"
	select PACKAGE_BUILD_TOOLS_UBOOT if ARCH_HAS_UBOOT
	select STABLE_ABI
	default n

config KERNEL_SOURCE
	string "Kernel source tree"
	depends on PACKAGE_KERNEL_LINUX_KERNEL
	default "../kernel/linux-2.6.git"

config KERNEL_CONFIG
	string "Kernel configuration"
	depends on PACKAGE_KERNEL_LINUX_KERNEL
	default "defconfig"

config KERNEL_DTB
	string "Flattened Device Tree blob"
	depends on PACKAGE_KERNEL_LINUX_KERNEL
	default ""
