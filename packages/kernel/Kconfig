menu "Operating System Kernel"

config VIRTUAL_KERNEL_LINUX_LIBC
	bool
	default n

config PACKAGE_KERNEL_LINUX_HEADERS
	bool "linux-headers: Linux kernel headers"
	select VIRTUAL_KERNEL_LINUX_LIBC
	select VIRTUAL_PROVIDES
	default n

config PACKAGE_KERNEL_LINUX_MODULES
	bool "linux-modules: Linux kernel modules"
	default n

config PACKAGE_KERNEL_LINUX_KERNEL
	bool "linux: Linux kernel"
	select VIRTUAL_KERNEL_LINUX_LIBC
	select VIRTUAL_PROVIDES
	default y

config KERNEL_SOURCE
	string "Kernel source tree"
	default "../kernel/linux-2.6.git"

config KERNEL_CONFIG
	string "Kernel configuration"
	default "defconfig"

config PACKAGE_KERNEL_MODULE_INIT_TOOLS
	bool "module-init-tools: Linux kernel - module init tools"
	select VIRTUAL_DEVEL_LIBC
	default n

config PACKAGE_KERNEL_PSB_KERNEL_SOURCE
	bool "Intel SCH (Poulsbo) DRM module"
	default n

endmenu

if VIRTUAL_DEVEL_LIBC
config OS
	string
	default "linux"
endif
