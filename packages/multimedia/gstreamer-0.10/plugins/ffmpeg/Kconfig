config PACKAGE_MULTIMEDIA_GSTREAMER_0_10_PLUGINS_FFMPEG
	bool "ffmpeg"
	select PACKAGE_LIBS_ORC if PACKAGE_MULTIMEDIA_GSTREAMER_0_10_PLUGINS_FFMPEG_ORC
	select PACKAGE_MULTIMEDIA_GSTREAMER_0_10_CORE
	select PACKAGE_MULTIMEDIA_GSTREAMER_0_10_PLUGINS_BASE
	select VIRTUAL_LIBAV

config PACKAGE_MULTIMEDIA_GSTREAMER_0_10_PLUGINS_FFMPEG_ORC
	bool "ORC support"
	depends on PACKAGE_MULTIMEDIA_GSTREAMER_0_10_PLUGINS_FFMPEG
