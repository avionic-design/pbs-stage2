config PACKAGE_MULTIMEDIA_VLC
	bool "vlc"
	select PACKAGE_LIBS_DBUS
	select PACKAGE_LIBS_FRIBIDI
	select PACKAGE_LIBS_ICONV if !GLIBC
	select VIRTUAL_LIBS_GTK
	select PACKAGE_MULTIMEDIA_ALSA_CORE
	select PACKAGE_MULTIMEDIA_LIBDVBPSI
	select PACKAGE_MULTIMEDIA_LIBMAD
	select PACKAGE_MULTIMEDIA_LIBSAMPLERATE
	select PACKAGE_MULTIMEDIA_LIVE
	select PACKAGE_MULTIMEDIA_V4L_UTILS
	select PACKAGE_MULTIMEDIA_ZVBI if PACKAGE_MULTIMEDIA_VLC_TELETEXT
	select PACKAGE_XORG_LIB_XCB_UTIL_KEYSYMS
	select VIRTUAL_LIBAV
	select VIRTUAL_OPENGL if HAVE_OPENGL
	select VIRTUAL_OPENGL_ES if HAVE_OPENGL_ES

if PACKAGE_MULTIMEDIA_VLC

config PACKAGE_MULTIMEDIA_VLC_VLC2X
	bool "vlc 2.x"
	default y if PACKAGE_VENDOR_NVIDIA_TEGRA2_L4T
	help
	  Build VLC 2 instead of 3. More suitable for T20 targets but also
	  requires legacy versions of libdvbpsi and libav, which in turn are
	  incompatible to gstreamer-1.

config PACKAGE_MULTIMEDIA_VLC_TELETEXT
	bool "teletext support"

config PACKAGE_MULTIMEDIA_VLC_VAAPI
	bool "VA-API support"
	select PACKAGE_MULTIMEDIA_FFMPEG
	select PACKAGE_MULTIMEDIA_FFMPEG_VAAPI

endif
