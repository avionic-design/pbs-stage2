+static void
+iterate_color_balance_elements (gpointer data, gpointer user_data)
+{
+  gboolean valid = is_valid_color_balance_element (data);
+  GstColorBalance **cb_out = user_data;
+
+  if (valid) {
+    if (*cb_out
