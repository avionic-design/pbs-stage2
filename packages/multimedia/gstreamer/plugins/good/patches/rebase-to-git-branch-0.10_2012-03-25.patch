+static const guint32 sample_rates[] = {
+  6000, 8000, 9600, 11025, 12000, 16000, 22050,
+  24000, 32000, 44100, 48000, 64000, 88200, 96000, 192000
+};
+
+#define CHECK(call) { \
+  if (!call) \
+    goto read_failed; \
