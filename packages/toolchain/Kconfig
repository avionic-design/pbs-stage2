menuconfig TOOLCHAIN
	bool "Toolchain"

if TOOLCHAIN

menu "Language support"

config TOOLCHAIN_LANG_C
	bool "C"
	default y

config TOOLCHAIN_LANG_CXX
	bool "C++"
	default y

config TOOLCHAIN_LANG_OBJC
	bool "Objective-C"
	default n

config TOOLCHAIN_LANG_OBJCXX
	bool "Objective-C++"
	default n

config TOOLCHAIN_LANG_JAVA
	bool "Java"
	default n

endmenu

