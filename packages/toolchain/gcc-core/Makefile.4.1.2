# build instructions for bootstrap GCC 4.1.2

conf-args = \
	--prefix=$(CORE_PREFIX) \
	--with-local-prefix=$(PLATFORM) \
	--with-sysroot=$(PLATFORM) \
	--with-build-sysroot=$(PLATFORM) \
	--with-as=$(PLATFORM)/usr/bin/$(HOST)-as \
	--with-ld=$(PLATFORM)/usr/bin/$(HOST)-ld \
	$(EXTRA_GCC_CONF_ARGS) \
	--disable-threads \
	--disable-nls \
	--enable-symvers=gnu \
	--disable-shared \
	--enable-languages=c

package-configure:
	mkdir -p $(pkgtree)/core-$(HOST) && cd $(pkgtree)/core-$(HOST) && \
		$(env) ../configure --target=$(HOST) --host=$(BUILD) \
			$(conf-args)

build-args =
package-build:
	cd $(pkgtree)/core-$(HOST) && \
		$(env) $(MAKE) $(build-args) all-gcc

install-args =
package-install:
	cd $(pkgtree)/core-$(HOST) && \
		$(env) $(MAKE) $(install-args) install-gcc

