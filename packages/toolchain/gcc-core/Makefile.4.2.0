# build instructions for bootstrap GCC 4.2.0

conf-args = \
	--prefix=/usr \
	--mandir=/usr/share/man \
	--infodir=/usr/share/info \
	--with-local-prefix=$(PLATFORM) \
	--with-sysroot=$(PLATFORM) \
	--with-build-sysroot=$(PLATFORM) \
	--with-headers=$(PLATFORM)/usr/include \
	$(EXTRA_GCC_CONF_ARGS) \
	--with-newlib \
	--with-inhibit-libc \
	--disable-threads \
	--disable-nls \
	--enable-symvers=gnu \
	--disable-shared \
	--enable-languages=c

package-configure:
	mkdir -p $(pkgtree)/core-$(HOST) && cd $(pkgtree)/core-$(HOST) && \
		$(env) ../configure --target=$(HOST) --host=$(BUILD) \
			$(conf-args)

build-args =
package-build:
	cd $(pkgtree)/core-$(HOST) && \
		$(env) $(MAKE) $(build-args) all-gcc

install-args = DESTDIR=$(PLATFORM)
package-install:
	cd $(pkgtree)/core-$(HOST) && \
		$(env) $(MAKE) $(install-args) install-gcc

