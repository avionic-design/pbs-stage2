# build instructions for bootstrap GCC 4.2.2

conf-args = \
	--target=$(TARGET) \
	--prefix=$(prefix) \
	--mandir=$(prefix)/share/man \
	--infodir=$(prefix)/share/info \
	--program-prefix=$(TARGET)- \
	--disable-shared \
	--disable-threads \
	--disable-nls \
	--enable-symvers=gnu \
	--enable-languages=c

ifeq ($(FLOAT),soft)
	conf-args += --with-float=soft
endif

ifeq ($(MULTILIB),y)
	conf-args += --enable-multilib
else
	conf-args += --disable-multilib
endif

package-configure:
	mkdir -p $(pkgtree)/obj-$(HOST) && cd $(pkgtree)/obj-$(HOST) && \
		$(env) ../configure $(conf-args)

build-args =
package-build:
	cd $(pkgtree)/obj-$(HOST) && \
		$(env) $(MAKE) $(build-args) all-gcc

install-args =
package-install:
	cd $(pkgtree)/obj-$(HOST) && \
		$(env) $(priv) $(MAKE) $(install-args) install-gcc

