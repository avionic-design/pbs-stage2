conf-args = \
	--prefix=$(prefix) \
	--includedir=$(prefix)/$(HOST)/include \
	--libexecdir=$(prefix)/lib \
	--program-prefix=$(HOST)- \
	--enable-languages=c
#	--enable-shared \
	--enable-static \
	--disable-threads \
	--disable-nls \
	--enable-symvers=gnu \
	--enable-languages=c

ifeq ($(FLOAT),soft)
	conf-args += --with-float=soft
endif

ifeq ($(MULTILIB),y)
	conf-args += --enable-multilib
else
	conf-args += --disable-multilib
endif

package-configure:
	mkdir -p $(pkgtree)/core-$(HOST) && cd $(pkgtree)/core-$(HOST) && \
		$(env) ../configure --target=$(HOST) $(conf-args)

build-args =
package-build:
	cd $(pkgtree)/core-$(HOST) && \
		$(env) $(MAKE) $(build-args) all-gcc

install-args =
package-install:
	cd $(pkgtree)/core-$(HOST) && \
		$(env) $(priv) $(MAKE) $(install-args) install-gcc

