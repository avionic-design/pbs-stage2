# build instructions for final GCC 4.3.1

conf-args = \
	--target=$(TARGET) \
	--prefix=$(prefix) \
	--program-prefix=$(TARGET)- \
	--disable-libmudflap \
	--disable-libssp \
	--disable-static \
	--enable-shared \
	--enable-symvers=gnu \
	--enable-languages=c,c++

ifeq ($(variant),sysroot)
  conf-args += \
	--with-local-prefix=$(PLATFORM) \
	--with-build-sysroot=$(PLATFORM) \
	--with-sysroot=$(PLATFORM) \
	--with-as=$(PLATFORM)$(prefix)/bin/$(TARGET)-as \
	--with-ld=$(PLATFORM)$(prefix)/bin/$(TARGET)-ld
else
  conf-args += \
	--includedir=$(prefix)/$(TARGET)/include \
	--libexecdir=$(prefix)/lib
endif


ifeq ($(FLOAT),soft)
  conf-args += --with-float=soft
endif

ifeq ($(MULTILIB),y)
  conf-args += --enable-multilib
else
  conf-args += --disable-multilib
endif

package-configure:
	mkdir -p $(pkgtree)/obj-$(HOST) && cd $(pkgtree)/obj-$(HOST) && \
		../configure $(conf-args)

build-args =
package-build:
	cd $(pkgtree)/obj-$(HOST) && \
		$(env) $(MAKE) $(build-args)

ifeq ($(variant),sysroot)
  install-args = DESTDIR=$(PLATFORM)
endif

package-install:
	cd $(pkgtree)/obj-$(HOST) && \
		$(env) $(priv) $(MAKE) $(install-args) install

