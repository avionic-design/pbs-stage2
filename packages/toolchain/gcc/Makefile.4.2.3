# build instructions for final GCC 4.2.3

conf-args = \
	--prefix=/usr \
	--mandir=/usr/share/man \
	--infodir=/usr/share/info \
	--with-local-prefix=$(PLATFORM) \
	--with-sysroot=$(PLATFORM) \
	--with-build-sysroot=$(PLATFORM) \
	--with-headers=$(PLATFORM)/usr/include \
	--program-prefix=$(HOST)- \
	--enable-shared \
	--disable-static \
	--enable-symvers=gnu \
	--enable-languages=c,c++

ifeq ($(FLOAT),soft)
	conf-args += --with-float=soft
endif

ifeq ($(MULTILIB),y)
	conf-args += --enable-multilib
else
	conf-args += --disable-multilib
endif

#conf-vars = \
	ac_gcsections=no

package-configure:
	mkdir -p $(pkgtree)/obj-$(HOST) && cd $(pkgtree)/obj-$(HOST) && \
		../configure --target=$(HOST) $(conf-args) $(conf-vars)

build-args =
package-build:
	cd $(pkgtree)/obj-$(HOST) && \
		$(env) $(MAKE) $(build-args)

install-args = DESTDIR=$(PLATFORM)
package-install:
	cd $(pkgtree)/obj-$(HOST) && \
		$(env) $(MAKE) $(install-args) install

