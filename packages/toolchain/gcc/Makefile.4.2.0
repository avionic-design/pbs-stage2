# build instructions for GCC 4.2.0

conf-args = \
	--prefix=/usr \
	--mandir=/usr/share/man \
	--infodir=/usr/share/info \
	--with-local-prefix=$(PLATFORM) \
	--with-sysroot=$(PLATFORM) \
	--with-build-sysroot=$(PLATFORM) \
	--with-headers=$(PLATFORM)/usr/include \
	$(EXTRA_GCC_CONF_ARGS) \
	--disable-multilib \
	--enable-symvers=gnu \
	--enable-languages=c,c++

package-configure:
	mkdir -p $(pkgtree)/obj-$(HOST) && cd $(pkgtree)/obj-$(HOST) && \
		../configure --target=$(HOST) --host=$(BUILD) \
			$(conf-args)

build-args =
package-build:
	cd $(pkgtree)/obj-$(HOST) && \
		$(env) $(MAKE) $(build-args)

install-args = DESTDIR=$(PLATFORM)
package-install:
	cd $(pkgtree)/obj-$(HOST) && \
		$(env) $(MAKE) $(install-args) install

