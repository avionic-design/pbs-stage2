# build instructions for GCC 4.1.2

conf-args = \
	--with-local-prefix=$(PLATFORM) \
	--with-sysroot=$(PLATFORM) \
	--with-build-sysroot=$(PLATFORM) \
	--with-float=soft \
	--disable-multilib \
	--enable-symvers=gnu \
	--enable-languages=c,c++

package-configure:
	mkdir -p $(pkgtree)/obj-$(HOST) && cd $(pkgtree)/obj-$(HOST) && \
		../configure --target=$(HOST) --host=$(BUILD) \
			--prefix=/usr --mandir=/usr/share/man $(conf-args)

build-args =
package-build:
	cd $(pkgtree)/obj-$(HOST) && \
		$(env) $(MAKE) $(build-args)

install-args = DESTDIR=$(PLATFORM)
package-install:
	cd $(pkgtree)/obj-$(HOST) && \
		$(env) $(MAKE) $(install-args) install

