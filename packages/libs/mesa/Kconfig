menuconfig PACKAGE_LIBS_MESA
	bool "mesa"
	select PACKAGE_BUILD_TOOLS_LIBXML2
	select PACKAGE_LIBS_EXPAT
	select PACKAGE_LIBS_LIBDRM
	select PACKAGE_LIBS_TALLOC
	select PACKAGE_XORG_PROTO_DRI2
	select PACKAGE_XORG_PROTO_GL
	select PACKAGE_XORG_LIB_XDAMAGE
	select PACKAGE_XORG_LIB_XT
	select PACKAGE_XORG_LIB_XXF86VM

