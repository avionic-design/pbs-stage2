config PACKAGE_LIBS_PCSC_LITE
	bool "PC/SC Lite"
	select VIRTUAL_DEVEL_LIBC
	select PACKAGE_BUILD_TOOLS_AUTOCONF
	select PACKAGE_BUILD_TOOLS_AUTOMAKE
	select PACKAGE_LIBS_LIBUSB_COMPAT if !PACKAGE_LIBS_PCSC_LITE_HAL
	default n

config PACKAGE_LIBS_PCSC_LITE_HAL
	bool "HAL support"
	depends on PACKAGE_LIBS_PCSC_LITE
	select PACKAGE_LIBS_HAL
	default n
