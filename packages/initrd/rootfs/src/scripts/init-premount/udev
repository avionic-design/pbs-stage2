#!/bin/sh -e

PREREQS=""

prereqs() { echo "$PREREQS"; }

case "$1" in
    prereqs)
    prereqs
    exit 0
    ;;
esac

echo > /proc/sys/kernel/hotplug

mkdir -p /dev/.udev/db/
echo -n 'Starting hotplug daemon: udevd ... '
udevd --daemon
echo 'done'

mkdir -p /dev/.udev/queue/
echo -n 'Synthesizing initial hotplug events ... '
/sbin/udevtrigger
echo 'done'

echo -n 'Waiting for hotplug daemon to settle ... '
/sbin/udevsettle --timeout=30 || true
echo 'done'

# If the rootdelay parameter has been set, we wait a bit for devices
# like usb/firewire disks to settle.
if [ "$ROOTDELAY" ]; then
	if [ -x /sbin/usplash_write ]; then
		/sbin/usplash_write "TIMEOUT $(($ROOTDELAY + 5))"
	fi
	sleep $ROOTDELAY
	if [ -x /sbin/usplash_write ]; then
		/sbin/usplash_write "TIMEOUT 15"
	fi
fi

# Leave udev running to process events that come in out-of-band (like USB
# connections)

