config PACKAGE_BUILD_TOOLS_UBOOT
	bool "U-Boot utilities"
	select PACKAGE_BUILD_TOOLS_DTC if PACKAGE_BUILD_TOOLS_UBOOT_FIT
	select PACKAGE_BUILD_TOOLS_OPENSSL if PACKAGE_BUILD_TOOLS_UBOOT_FIT_SIG

if PACKAGE_BUILD_TOOLS_UBOOT

config PACKAGE_BUILD_TOOLS_UBOOT_FIT
	bool "Enable FIT support"
	default y

if PACKAGE_BUILD_TOOLS_UBOOT_FIT

config PACKAGE_BUILD_TOOLS_UBOOT_FIT_SIG
	bool "Enable FIT signatures support"

endif

endif
