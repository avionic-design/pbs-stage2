PACKAGE = u-boot
VERSION = 2011.09

LOCATION = ftp://ftp.denx.de/pub/$(PACKAGE)
TARBALLS = $(PACKAGE)-$(VERSION).tar.bz2

include packages/build-tools/common.mk

$(pkgtree)/.setup:
	$(call cmd,stamp)

$(pkgtree)/.configure: $(pkgtree)/.patch
	cd $(pkgbuildtree) && $(env) $(MAKE) include/timestamp_autogenerated.h
	$(call cmd,stamp)

$(pkgtree)/.build: $(pkgtree)/.configure
	cd $(pkgbuildtree) && $(env) $(MAKE) tools
	$(call cmd,stamp)

$(pkgtree)/.do-install: $(pkgtree)/.build
	install -m 755 -d $(prefix)/bin
	install -m 755 $(pkgbuildtree)/tools/mkimage $(prefix)/bin
	$(call cmd,stamp)
