config ARCH
	string
	default "arm"

#
# ARM CPU selection
#
choice
	prompt "CPU"

config ARCH_ARM_CPU_GENERIC
	bool "generic"

config ARCH_ARM_CPU_XSCALE
	bool "Xscale"

config ARCH_ARM_CPU_CORTEX_A9
	bool "Cortex-A9"

endchoice

if ARCH_ARM_CPU_GENERIC
source "arch/arm/generic/Kconfig"
endif

if ARCH_ARM_CPU_XSCALE
source "arch/arm/xscale/Kconfig"
endif

if ARCH_ARM_CPU_CORTEX_A9
source "arch/arm/cortex-a9/Kconfig"
endif

#
# Endianness configuration
#
choice
	prompt "Endianness"

config ARCH_ARM_ENDIAN_LITTLE
	bool "little endian"

config ARCH_ARM_ENDIAN_BIG
	bool "big endian"

endchoice

#
# ABI configuration
#
choice
	prompt "ABI"

config ARCH_ARM_ABI_OABI
	bool "OABI"

config ARCH_ARM_ABI_EABI
	bool "EABI"

endchoice

if ARCH_ARM_ABI_OABI
config ABI
	string
	default ""
endif

if ARCH_ARM_ABI_EABI
config ABI
	string
	default "eabi"
endif
